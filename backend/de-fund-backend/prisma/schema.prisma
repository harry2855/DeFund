generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URI")
}


model BaseUser {
  id Int @id @default(autoincrement())
  walletAddress String 
  name String
  seeker Seeker?
  inverstor Investor?
  isSeeker Boolean @default(false)
  isInvestor Boolean @default(false)
} 

model Seeker{
  id Int @id @default(autoincrement())
  user BaseUser @relation(fields: [userId] , references: [id])
  userId Int @unique
  project Project[]
}

model Investor {
  id Int @id @default(autoincrement())
  user BaseUser @relation(fields: [userId] , references: [id])
  userId Int @unique
  project Project[]
}

model Project {
  id Int @id @default(autoincrement())
  name String  
  desciption String
  gitHubLink String
  amountSeeking Int
  youtubeVideLink String
  seeker Seeker @relation(fields: [seekerId] , references: [id])
  seekerId Int 
  investor Investor? @relation(fields: [investorId] , references: [id]) 
  investorId Int?
  isFunded Boolean @default(false)
}

model Poll {
  id Int @id @default(autoincrement())
  prompt String
  projectName String
  yes Int
  no Int
}
